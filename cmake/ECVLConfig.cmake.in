include(CMakeFindDependencyMacro)

SET(ECVL_WITH_DICOM @ECVL_WITH_DICOM@)
SET(ECVL_WITH_OPENGL @ECVL_WITH_OPENGL@)
SET(ECVL_BUILD_EDDL @ECVL_BUILD_EDDL@)
SET(ECVL_BUILD_GUI @ECVL_BUILD_GUI@)

set(OpenCV_DIR "@OpenCV_DIR@")
find_dependency(OpenCV)

#set(NIFTI_DIR "@CMAKE_INSTALL_PREFIX@")
#find_dependency(NIFTI)

if(${ECVL_WITH_DICOM})
    set(DCMTK_DIR "@CMAKE_INSTALL_PREFIX@/install/cmake")
    find_dependency(DCMTK)
endif()

if (${ECVL_BUILD_EDDL})
    set(EDDL_DIR "@EDDL_DIR@")
    find_dependency(EDDL)
endif()

if (${ECVL_BUILD_GUI})
    set(wxWidgets_ROOT_DIR "@wxWidgets_ROOT_DIR@")
    find_dependency(wxWidgets)
    if (${ECVL_WITH_OPENGL})
        set(glm_DIR "@CMAKE_INSTALL_PREFIX@/lib/cmake/glm")
        find_dependency(glm)
        find_dependency(OpenGL)
    endif()
endif()

if (${ECVL_PARSER_DATASET})
    set(YAML_CPP_DIR "@CMAKE_INSTALL_PREFIX@/install/cmake")
    find_dependency(yaml-cpp)
endif()

include("@CMAKE_INSTALL_PREFIX@/ECVLTargets.cmake")

foreach(COMPONENT ${ECVL_FIND_COMPONENTS})
    string(TOUPPER ${COMPONENT} UPPER_COMPONENT)
    if(TARGET "ECVL_${UPPER_COMPONENT}")
    else()
        message(WARNING "ECVL component ${COMPONENT} not found.")
        set(ECVL_FOUND OFF)
    endif()
endforeach()

SET(ECVL_LIBRARIES @ECVL_MODULES@)
SET(ECVL_INCLUDE_DIR "@CMAKE_INSTALL_PREFIX@/include")